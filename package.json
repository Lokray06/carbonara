{
  "name": "full-app",
  "private": true,
  "scripts": {
    "start:backend": "node backend-api/server.js",
    "start:frontend": "cd frontend-app && ng serve -o",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "install:backend": "cd backend-api && npm install",
    "install:frontend": "cd frontend-app && npm install",
    "postinstall": "npm run install:backend && npm run install:frontend"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  },
  "dependencies": {
    "sqlite3": "^5.1.7",
    "validator": "^13.15.23"
  }
}
